        },
        "Author": {
            "Caption": "Module Author",
            "Message": "Enter Author or company name",
            "Prompt": "Name",
            "Type": "TEXT",
            "Default": "PS"
        },
        "EnableGit": {
            "Caption": "EnableGit",
            "Message": "Do you want to enable GIT",
            "Prompt": "Option",
