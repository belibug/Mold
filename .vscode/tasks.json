{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Module",
            "type": "shell",
            "command": "pwsh",
            "args": [
                "-NoProfile",
                "-File",
                "just"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "echo": true,
                "focus": true,
                "panel": "shared",
                "clear": false
            }
        },
        {
            "label": "Run in PWSH",
            "type": "shell",
            "command": "pwsh",
            "args": [
                "-NoProfile",
                "-File",
                "run.ps1"
            ],
            "presentation": {
                "reveal": "always",
                "echo": true,
                "focus": true,
                "panel": "shared",
                "clear": false
            },
            "dependsOn": "Build Module"
        },
        {
            "label": "Launch External Terminal",
            "type": "shell",
            "command": "Start-Process",
            "args": [
                "-FilePath",
                "pwsh",
                "-ArgumentList",
                "-NoProfile"
            ],
            "options": {
                "cwd": "${workspaceRoot}",
                "requireFiles": [],
            },
            "presentation": {
                "reveal": "always",
                "echo": true,
                "focus": true,
                "panel": "new",
                "clear": false
            }
        },
    ]
}